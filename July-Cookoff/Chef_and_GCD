int main() {
	// your code goes here
	int t;
    cin>>t;
    while(t-->0)
    {
        int x,y;
        cin>>x>>y;
        if(__gcd(x,y)>1)
            cout<<0<<"\n";
        else
        {
            if(__gcd(x+1,y)>1||__gcd(x,y+1)>1)
                cout<<1<<"\n";
            else
                cout<<2<<"\n";
        }
    }
	return 0;
}
